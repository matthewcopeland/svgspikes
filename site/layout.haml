%html
  %head
    %meta(charset="UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    %title Svg spikes
    %link{rel: 'icon', href:'/images/favicon.ico', type: 'image/ico'}
    %link{rel:'stylesheet', type:'text/css', href:'/stylesheets/css/screen.css'}
    %script{src:"/javascripts/jquery.js"}
    %script{src:"/javascripts/app.js"}

  %body
    #header-wrapper
      %header#main-header
        %a#github-link{ href:"https://github.com/matthewcopeland/svgspikes", target: "_blank" }
          %img{ src: "https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png", alt: "Fork me on GitHub" }
        %h1
          %a{href:"/"} Svg Spikes
        %nav#main-nav
          %ul
            - nav_links.each do |nav_link|
              %li{ class: nav_link }
                %a{href:"#{parameterize(nav_link)}"}= nav_link

    #main-wrapper.wrapper
      #main= yield

    #footer-wrapper
      %footer#main-footer